@model MVC_CORE_EF_1.Models.User

@{
    ViewData["Title"] = "EditUser";
}

<h1>EditUser</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdUser" />
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nominativo" class="control-label"></label>
                <input asp-for="Nominativo" class="form-control" />
                <span asp-validation-for="Nominativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control">
                    <option value="">Scegli Role</option>
                    <option value="@UserRole.ADMIN">ADMIN</option>
                    <option value="@UserRole.USER">USER</option>
                </select>
                <span asp-validation-for="TipoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoCliente" class="control-label"></label>
                <select asp-for="TipoCliente" class="form-control">
                    <option value="">Scegli categoria</option>
                    <option value="privato">Privato</option>
                    <option value="azienda">Azienda</option>
                </select>
                <span asp-validation-for="TipoCliente" class="text-danger"></span>
            </div>
            <div id="CodiceFiscaleDiv" class="form-group" >
                <label asp-for="CodiceFiscale" class="control-label"></label>
                <input asp-for="CodiceFiscale" class="form-control" />
                <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
            </div>
            <div id="PartitaIvaDiv" class="form-group " >
                <label asp-for="PartitaIva" class="control-label"></label>
                <input asp-for="PartitaIva" class="form-control" />
                <span asp-validation-for="PartitaIva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {


            var handleVisibility = function () {
                var tipoCliente = $("#TipoCliente").val();
                if (tipoCliente === "privato") {
                    $("#CodiceFiscaleDiv").show();
                    $("#PartitaIvaDiv").hide();
                    $("#PartitaIva").val("");
                } else if (tipoCliente === "azienda") {
                    $("#CodiceFiscaleDiv").hide();
                    $("#PartitaIvaDiv").show();
                    $("#CodiceFiscale").val("");
                } else {
                    $("#CodiceFiscaleDiv").hide();
                    $("#PartitaIvaDiv").hide();
                    $("#CodiceFiscale").val("");
                    $("#PartitaIva").val("");
                }
            }

            handleVisibility();

            $("#TipoCliente").change(handleVisibility);
        });

    </script>
}
